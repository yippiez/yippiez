{
  "$schema": "https://opencode.ai/config.json",
  "permission": {
    "*": "deny",
    "read": {
      "*": "deny",
      "*README.md": "allow",
      "*NOT_MENTION": "allow"
    },
    "edit": {
      "*": "deny",
      "*README.md": "allow"
    },
    "bash": {
      "*": "deny",
      "gh repo list *": "allow",
      "gh api users/*/repos*": "allow",
      "gh api repos/*/commits*": "allow",
      "gh auth status*": "allow"
    }
  }
}
